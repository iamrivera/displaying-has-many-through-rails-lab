Patient: <%= @patient.name %> 
<br />
Age: <%= @patient.age %>
<br />

<br />
Appointments: <%= @patient.appointments.count %> 
    <% @patient.appointments.each do |appt| %> 
        <ul>
            <li>Date & Time:<%= "#{appt.appointment_datetime.strftime("%B %d, %Y")} at #{appt.appointment_datetime.strftime("%H:%M")}" %> ></li>
            <li>Doctor Name:<%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
        </ul>
    <% end %> 